  pipeline {
    agent {
      label 'master'
    }  
    
    stages {
     stage('build') {
         steps {
            // build
                 sh 'ant -f build.xml -v'
          
         }    
     }
     stage('Unit Tests') {
       steps {
         sh 'ant -f test.xml -v'
         junit 'reports/result.xml'
       }
     }
     stage('deploy') {
       steps {
         sh "cp dist/rectangle.jar /var/www/html/rectangles/all/"
       }
     }
    }
    
    post {
      always {
        archiveArtifacts artifacts: 'dist/*.jar', fingerprint: true
      }
    }
  }
  
